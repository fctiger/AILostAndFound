/* pages/home/home.wxss */
.swiper-container {
  width: 750rpx;
  position: relative;
  background-color: white;
}

.swiper_box {
  width: 100%;
  height: 375rpx; /*562.5rpx;*//**/
  overflow: visible;
}

.swiper_item{
  overflow: visible;
  border-radius: 50%;
}

.slide-image {
  /*swiper-item image */
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 375rpx; /*562.5rpx;*/
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}
.slide-image2 {
  /*swiper-item image */
    margin: 0 0 10px 0;
  width: 45%;
  display: inline-block;
  overflow: hidden;
  height: 200rpx; /*562.5rpx;*/
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}
.swiper-container .dots {
  position: relative;
  bottom: 10rpx;
  margin: 20rpx 30rpx 0 0;
  display: flex;
  justify-content: flex-end;
}

.swiper-container .dots .dot {
  margin: 0 10rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #999;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  background-color: red;
  opacity: 1;
}


.hot-name {
  position: absolute;
  top: 36rpx;
  left: 36rpx;
  display: flex;
  align-items: center;
}

.hot-name-line {
  width: 24rpx;
  height: 39rpx;
}

.hot-name-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.hot-image-discount {
  position: absolute;
  width: 259rpx;
  height: 188rpx;
  bottom: 0;
  left: 42rpx;
}

.hot-image {
  position: absolute;
  width: 240rpx;
  height: 240rpx;
  right: 36rpx;
  top: 40rpx;
}

.separator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 70rpx 0 30rpx;
}

.separator-line {
  width: 21rpx;
  height: 34rpx;
}

.separator-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.list {
  display: flex;
  margin: 0 27rpx 0 52rpx;
  justify-content: space-around;
}

.list-item {
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  margin-bottom: 25rpx;
  margin-right: 25rpx;
}

.list-item-image {
  height: 260rpx;
